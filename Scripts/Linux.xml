<?xml version="1.0"?>
<project>
	<target name="winscp" >
		<property name="remote.dir" value="${string::replace(string::replace(product.dir, sources.dir, ''), '\', '/')}" />
		<echo>remote.dir: ${remote.dir}</echo>
		<exec program="${environment::get-variable('ProgramFiles(x86)')}\winscp\winscp.com" timeout="1800000" > <!-- .com file writes correct console -->
			<arg value='${sshHost}' />
			<!--arg value='/hostkey=' /-->
			<arg value='/command "synchronize remote ""${product.dir}"" ""${remote.dir}"" -filemask=""|.svn/;*.build""" exit' />
		</exec>
	</target>
</project>